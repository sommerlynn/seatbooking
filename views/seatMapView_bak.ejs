            var //$cart = $('#selected-seats'),
            // $counter = $('#counter'),
            // $total = $('#total'),
                    sc = $('#seat-list').seatCharts({
                        map: [
                            <% for (var i=0; i< map.length; i++){%>
                            '<%=map[i]%>',
                            <% }%>
                        ],
                        seats: {
