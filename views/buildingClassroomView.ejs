<% include ../views/header.html %>
<style>
    .bar {
        background-color: #FFFFFF;
    }

    .bar:after {
        height: 0;
        background-color: #1D2025;
    }

    .bar-tab:before {
        background-color: #33475F;
    }

    .content {
        background-color: #E7E9ED;
        position: absolute;
        top: 2.8rem;
    }

    .content-block {
        padding: 0;
        margin: 0;
    }

    .classroom-list {
        margin: 0;
        padding: 0;
    }

    .classroom-list ul {
        list-style: none;
        padding: 0;
    }

    .classroom-list ul li {
        display: block;
        height: 5rem;
        margin: 0.1rem 0.625rem 0 0.625rem;
        background-color: #f2f2f2;
        border-radius: 0 0 0.1rem 0.1rem;
    }

    .classroom-title {
        line-height: 1.25rem;
        font-family: 华文中宋;
        border-radius: 0 0 0.1rem 0.1rem;
        color: #C41E04;
        font-weight: bold;
        padding: 0 0.3125rem;
    }

    .classroom-title:after{
        content: '';
        position: absolute;
        left: 0;
        right: auto;
        bottom: 0;
        height: 1px;
        width: 100%;
        background-color: #924A4A;
        display: block;
        z-index: 15;
        -webkit-transform-origin: 50% 100%;
        transform-origin: 50% 100%;
    }

    .classroom-left{
        width: 75%;
        float: left;
    }

    .classroom-right{
        width: 25%;
        float: left;
    }

    .classroom-time-status {
        font-size: 0.75rem;
        margin: 0px auto;
        padding: 0.3125rem 0;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        height: 6rem;
        z-index: 20;
        background-color: #FFFFFF;
    }

    .status-row-cell{
        width: 20%;
        float: left;
        text-align: center;
        line-height: 1.25rem;
    }

    .status-row-spliter{
        line-height: 0.3rem;
    }

    .status-icon{
        height: 16px;
        width: 16px;
        margin: 0px;
        float: left;
        text-align: center;
        outline: none;
        font-size: 0.75em;
        line-height:16px;
        color: blue;

        color: white;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        cursor: default;
        margin: 0px auto;
        padding: 0px;
    }
</style>
<div class="page">
    <!--<header class="bar bar-nav theme-dark">
        <h1 class="title">教室导航</h1>
    </header>-->

    <div class="classroom-time-status">
        <div class="status-row-cell">08:00</div>
        <div class="status-row-cell">10:00</div>
        <div class="status-row-cell">14:00</div>
        <div class="status-row-cell">16:00</div>
        <div class="status-row-cell">19:00</div>

        <div class="status-row-spliter">-</div>
        <div class="status-row-spliter">-</div>
        <div class="status-row-spliter">-</div>
        <div class="status-row-spliter">-</div>
        <div class="status-row-spliter">-</div>

        <div class="status-row-cell">10:00</div>
        <div class="status-row-cell">12:00</div>
        <div class="status-row-cell">16:00</div>
        <div class="status-row-cell">18:00</div>
        <div class="status-row-cell">21:00</div>

        <!--<div class="status-row-cell">空闲</div>
        <div class="status-row-cell">空闲</div>
        <div class="status-row-cell">空闲</div>
        <div class="status-row-cell">空闲</div>
        <div class="status-row-cell">空闲</div>-->
    </div>

    <!-- 工具栏 -->
    <nav class="bar bar-tab">
        <a class="tab-item active" id="buildingTab" href="http://www.julyangel.cn/building2" external>
            <span class="icon icon-home"></span>
            <span class="tab-label">预约座位</span>
        </a>
        <a class="tab-item" id="skyTab" href="http://www.julyangel.cn/index" external>
            <span class="icon icon-settings"></span>
            <span class="tab-label">七玥星空</span>
        </a>
        <a class="tab-item" id="meTab" href="http://www.julyangel.cn/me2" external>
            <span class="icon icon-star"></span>
            <span class="tab-label">我的</span>
        </a>
    </nav>
    <div class="content">
        <div class="content-block">
            <div class="classroom-list">
                <ul>
                    <% for ( var index = 0; index < classroomList.length; index++) { %>
                    <li>
                        <div class="classroom-left">
                            <div class="classroom-title">
                                <div class="classroom-name"><%= classroomList[index].area_name %> <%= classroomList[index].classroom_name %></div>
                            </div>
                        </div>
                        <div class="classroom-right">
                            <div>
                                 <span class="status-icon available16 normal-seat"></span>
                                 <span  class="status-description">空座 20</span>
                            </div>
                        </div>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
