<% include ../header.html %>
<style>
    .content-block {
        margin: 0;
        padding: 0;
        /*top: 2.2rem;*/
        position: relative;
    }

    .bar {
        /*background-color: #FFFFFF;*/
    }

    .bar:after {
        height: 0;
        background-color: #1D2025;
    }

    .bar-tab:before {
        /*background-color: #33475F;*/
    }

    .card-content-inner {
        padding: 0.25rem 0.75rem;
        text-align: justify;
        line-height: 1.25rem;
        font-size:0.625rem;
        color:#666;
    }

    .card-footer{
        min-height: unset;
        padding: 0.25rem 0.75rem;
        display: block;
        text-align: justify;
        line-height: 1.25rem;
        font-size:0.625rem;
        color:#A00000;
    }

    .content-block-title {
        margin: 0;
        padding: .7rem;
        background-color: #F7F7F8;
        color: #A00000;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        border-left: 4px solid #A00000;
    }

    .content-block-title:after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        right: auto;
        top: auto;
        height: 1px;
        width: 100%;
        background-color: #EFEFF4;
        display: block;
        z-index: 15;
        -webkit-transform-origin: 50% 100%;
        transform-origin: 50% 100%;
    }

    .list-block {
        margin: 0;
    }

    .list-block ul:before {
        height: 0;
    }

    .list-block .item-media {
        padding: 0;
    }

    .list-block .item-inner {
        padding: 0;
        min-height: 0;
    }

    .list-block .item-inner:after {
        height: 0px;
    }

    .list-block li{
        margin: 0 0 .75rem 0;
    }

    .user-header-img {
        margin: 0 auto;
        text-align: center;
        vertical-align: middle;
        padding: 0px;
    }

    .user-header-img img {
        vertical-align: middle;
        border-radius: 10px;
        margin: 0 .7rem 0 0;
    }
</style>
<div class="page">
    <nav class="bar bar-tab">
        <a class="tab-item active" id="buildingTab" href="/building/<%= openid %>?v=2" external>
            <span class="icon icon-building"></span>
            <span class="tab-label">自习座位</span>
        </a>
        <a class="tab-item" id="skyTab" href="/reading/<%= openid %>" external>
            <span class="icon icon-book"></span>
            <span class="tab-label">七玥书斋</span>
        </a>
        <a class="tab-item" id="meTab" href="/me/<%= openid %>" external>
            <span class="icon icon-me"></span>
            <span class="tab-label">我的</span>
        </a>
    </nav>
    <div class="content" style="background-color: #FFFFFF">
        <div class="content-block">
            <ul style="padding: 0; margin: 0">
                <div class="list-block cards-list">
                    <div class="content-block-title">
                        <div class="item-media">
                            <i class="icon icon-arbitration"></i>
                        </div>
                        <div class="item-inner">
                            <div class="item-title">座位仲裁</div>
                            <div><a href="/arbitration/<%= openid %>">我要申请 ></a></div>
                        </div>
                    </div>

                    <% for(var index = 0; index < arbitrationList.length; index++) { %>
                    <li class="card">
                        <div class="card-content">
                            <div class="card-content-inner">
                                <div class="data-row">
                                    <span class="user-header-img"><img width="20" height="20"
                                                                       src="<%= arbitrationList[index].applier_headimgurl.replace('/0', '/46') %>" /></span>
                                    <span><%= arbitrationList[index].apply_date.toLocaleString('en-US', {hour12: false}) %></span>
                                </div>
                                <div class="data-row">
                                    <%= arbitrationList[index].classroom_full_name %> <%= arbitrationList[index].seat_code %>,
                                    <%= arbitrationList[index].description %>。
                                </div>
                            </div>
                        </div>
                        <% if(arbitrationList[index].status == 2) {%>
                        <div class="card-footer">
                            <div class="data-row">
                                <%= arbitrationList[index].operate_comment %>
                            </div>
                            <div class="data-row" style="text-align: right">
                                <span class="user-header-img"><img width="20" height="20"
                                     src="<%= arbitrationList[index].operator_headimgurl.replace('/0', '/46') %>" /></span> <%= arbitrationList[index].operate_date.toLocaleString('en-US', {hour12: false}) %>
                            </div>
                        </div>
                        <% } %>
                    </li>
                    <% } %>
                </div>
            </ul>
        </div>
    </div>
</div>
<script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
<script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm.min.js' charset='utf-8'></script>
<script type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm-extend.min.js' charset='utf-8'></script>
<script>
    $.config = {
        autoInit: true,
        router: false
    }
</script>
